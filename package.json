{
  "name": "qlite",
  "version": "0.1.0-pre-alpha",
  "description": "Little library to operate DOM like jQuery.",
  "main": "index.js",
  "scripts": {
    "test": "standard && cross-env NODE_ENV=test karma start --single-run",
    "build": "standard && rollup -c",
    "lint": "standard",
    "fix": "standard --fix",
    "dev": "cross-env NODE_ENV=test karma start --auto-watch"
  },
  "standard": {
    "ignore": [
      "dist"
    ],
    "globals": [
      "describe",
      "it",
      "before",
      "after",
      "beforeEach",
      "afterEach"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/teabyii/qlite.git"
  },
  "keywords": [
    "jquery",
    "zepto",
    "dom",
    "library",
    "lite"
  ],
  "author": "Boom Lee <teabyii@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/teabyii/qlite/issues"
  },
  "homepage": "https://github.com/teabyii/qlite#readme",
  "devDependencies": {
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-istanbul": "^4.1.1",
    "babel-preset-latest": "^6.24.0",
    "cross-env": "^3.2.4",
    "karma": "^1.5.0",
    "karma-coverage": "^1.1.1",
    "karma-html2js-preprocessor": "^1.1.0",
    "karma-mocha": "^1.3.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-rollup-preprocessor": "^3.0.3",
    "karma-spec-reporter": "0.0.30",
    "mocha": "^3.2.0",
    "rollup": "^0.41.6",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-node-builtins": "^2.1.0",
    "rollup-plugin-node-globals": "^1.1.0",
    "standard": "^10.0.1"
  }
}
